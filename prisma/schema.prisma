generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  productId               String   @id @default(uuid())
  productTitle            String
  productImage            String[]
  productPrice            Float
  productShortDescription String
  productLongDescription  String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @default(now())
}
